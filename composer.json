        "fzaninotto/faker": "^1.9",
        "arrilot/dotenv-php": "^2.0",
        "phpmailer/phpmailer": "~6.1"
    },
    "autoload": {
      "psr-4": {
        "App\\": "app/",
        "Framework\\": "framework/"
