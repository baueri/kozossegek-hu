<?xml version="1.0" encoding="UTF-8" ?>
<routes prefix="{lang}" as="api">
    <route-group namespace="App\Modules\Portal\Controllers\">
        <route-group middleware="Framework\Middleware\JsonApi" prefix="portal/api">
            <route method="post" as="user.create_user" controller="UserController" uri="user/create" use="createUser"/>
        </route-group>
        <route-group prefix="portal/api">
            <route method="post" uri="trip/create" as="trip.create" controller="TripController" use="create"/>
            <route method="post" uri="trip/{trip}/update" as="trip.update" controller="TripController" use="update"/>
            <route method="all" uri="trip/{trip}/balance" as="trip.balance" controller="TripController" use="balance"/>
        </route-group>
    </route-group>
</routes>