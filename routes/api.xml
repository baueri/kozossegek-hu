<?xml version="1.0" encoding="UTF-8" ?>
<routes as="api">
    <route-group namespace="App\Portal\Controllers\Api">
        <route-group middleware="Framework\Middleware\JsonApi" namespace="V1" prefix="api/v1">
            <route method="all" controller="SearchController" uri="search-city" use="searchCity" as="search-city"/>
            <route method="all" controller="SearchController" uri="search-institute" use="searchInstitute" as="search-institute"/>
            <route method="all" controller="SearchController" uri="search-district" use="searchDistrict" as="search-district"/>
        </route-group>
    </route-group>


    <route-group  namespace="App\Admin\Controllers\Api" as="admin">
        <route method="post" uri="maintenance" controller="SettingsController" use="toggleMaintenance" as="maintenance"/>
    </route-group>
</routes>
