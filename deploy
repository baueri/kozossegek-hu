#!/usr/bin/php
<?php

global $argv;

include "php_deploy/PHPDeploy.php";

$env = isset($argv[1]) ? $argv[1] : die("Nincs megadva a kÃ¶rnyezet\n\n");

php_deploy($env)
->task('installing composer dependencies...', 'composer install')
->task('running migrations', 'composer migrate')
->task('turn maintenance on', 'sftp:touch', 'maintenance')
->run();
